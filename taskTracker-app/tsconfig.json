{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src"
    ]
}